{% extends baseTemplate %}


{% block form %}
    <h1>{{ 'index.h1'|trans({}, 'main') }}</h1>
    {{ form(form) }}
    <h2>{{ 'index.h2'|trans({}, 'main') }}</h2>
    <table class="table">
        <tr>
            <th>
                {{ 'index.table.column'|trans({}, 'main') }}
            </th>
            <th>
                {{ 'index.table.name'|trans({}, 'main') }}
            </th>
        </tr>
        {% for key, i in builder %}
            <tr>
                <td>
                    {{ letters[key] }}
                </td>
                <td>
                    {{ i }}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}